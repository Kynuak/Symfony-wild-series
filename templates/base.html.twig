<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{asset('build/images/icons/favicon.png')}}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body {{ stimulus_controller('theme') }} {{ stimulus_target('theme', 'body') }}>
        <header>
            {% include 'Includes/_navbar.html.twig' %}
        </header>
        <main>
            {% for category, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ category }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
            

            <button class="btn-form" {{ stimulus_action('theme', 'toggleDarkMode') }}>Toggle Dark Mode</button>
        </main>
        
        <aside>
            {{ component('lastEpisode') }}
        </aside>
        
    </body>
</html>
